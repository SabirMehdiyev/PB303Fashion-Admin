@model List<Category>
<div class="col-lg-12 grid-margin stretch-card" >
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories</h4>
            <a asp-controller="category" asp-action="create" class="btn btn-primary">Create</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Name</td>
                                <td>
                                    <a class="btn btn-info btn-sm">Details</a>
                                    <a class="btn btn-warning btn-sm">Update</a>
                                    <a class="btn btn-danger btn-sm" asp-controller="category" asp-action="delete" asp-route-id="@category.Id">Delete</a>
                                   @*  <form method="post" asp-action="delete">
                                        <input type="hidden" value="@category.Id" name="id"/>
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form> *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>